            <Image url="@../img/header.jpg" />
         </image>
      </ImageView>
      <Label fx:id="labelEmail" alignment="CENTER" layoutX="185.0" layoutY="110.0" prefHeight="35.0" prefWidth="231.0" text="Tapez Votre Email" textFill="#fff6f6">
         <font>
